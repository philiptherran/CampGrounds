<% include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card" >
                <div class="list-group list-group-flush">
                    <li class="list-group-item active">info</li>
                    <li class="list-group-item">info</li>
                    <li class="list-group-item">info</li>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%=campGround.image%>"/>
                <div class="card-body">
                    <h4 class="float-right">$$$</h4>
                    <h4 class="card-title"><a><%=campGround.name%></a></h4>
                    <p class="card-text">
                        <em>
                            Submitted by 
                            <%=campGround.author.username%>
                        </em>
                    </p>
                    <p class="card-text"><%=campGround.description%></p>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">    
                        <%if(user && campGround.author.id.equals(user._id)){%>    
                            <a class="btn btn-warning mr-2" href="/campgrounds/<%=campGround._id%>/edit">Edit</a>
                            <form action="/campgrounds/<%=campGround._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger mr-2">Delete</button>
                            </form>
                        <%}%>    
                    </div>
                </div>
            </div>
            
            <div class="card bg-light" id="separation" >
                <div class="text-right card-header">
                    <a class="btn btn-success" href="/campgrounds/<%=campGround._id%>/comments/new">New comments</a>
                </div>
                <div class="card-body">
                    <%campGround.comments.forEach(function(comment){%>
                        <h5 class="card-title"><%=comment.author.username%></h5>
                        <p class="card-text"><%=comment.text%></p>
                        <div class="btn-group btn-group-toggle">    
                            <%if(user && comment.author.id.equals(user._id)){%>    
                                <a class="btn btn-warning btn-sm mr-2" 
                                href="/campgrounds/<%=campGround._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                <form action="/campgrounds/<%=campGround._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-sm mr-2">Delete</button>
                                </form>
                            <%}%>    
                        </div>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs%>